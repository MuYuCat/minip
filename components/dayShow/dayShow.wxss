/* components/dayShow/dayShow.wxss */
.dayShow {
  width: 100%;
  height: 100%;
  background-color: #F3F4F5;
}
.dateTitle {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
}
.titleItem {
  width: 15%;
  height: 50rpx;
  text-align: center;
  font-size: 24rpx;
}
.dateItem {
  height: 100rpx;
}
.dateGrid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
}
.dateGridLess {
  height: 56rpx;
  overflow: hidden;
}
.gridItem {
  width: 14.28%;
  height: 50rpx;
  text-align: center;
  vertical-align: middle;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: nowrap;
  /* border-top: 1px solid #DEDEDE; */
}
.gridTitle {
  height: 50rpx;
  line-height: 50rpx;
  width: 50rpx;
}
.showIsDay {
  background-color: #99BCAC; 
  border-radius: 50%;
  color: #fff;
}
.hasClick {
  background-color: #D5EBE1; 
  color: #333;
}
.clickDay {
  margin-top: 4rpx;
  background-color: #99BCAC; 
  border-radius: 8rpx;
  color: #fff;
}
.showLess {
  width: 100%;
  height: 40rpx;
  background-color: pink;
  text-align: center;
  background-color: #fff;
  margin-bottom: 10rpx;
}
.panelShow {
  height: 40vh;
  overflow-y: auto;
  background-color: #fff;
}
.addTask {
  text-align: center;
  margin-top: 20rpx;
  font-weight: 800;
  color: #80A492;
}