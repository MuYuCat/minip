/**index.wxss**/
.calendar {
  width: 100%;
  height: 100vh;
  margin-top: 10rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.select_date {
  height: 80rpx;
  width: 80%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  /* background-color: #96a48b; */
}
.data-show {
  width: 50%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.data-down {
  width: 8rpx;
  height: 8rpx;
  margin-left: 16rpx;
}
.date-type {
  width: 100px;
  height: 40px;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  flex-wrap: nowrap;
  align-content: space-around;
  background-color: #D8D8D8;
}
.clickType {
  width: 40px;
  height: 50rpx;
  text-align: center;
  border-radius: 16rpx;
  background-color: #fff;
  padding-top: 6rpx;
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.0400);
}
.garyType {
  width: 40px;
  height: 44rpx;
  text-align: center;
}
.dayShow {
  width: 100%;
  height: 80vh;
}
.monthShow {
  width: 100%;
  height: 80vh;
}