/* components/addRecord/addRecord.wxss */
.clickRecord {
  width: 600rpx;
  height: 700rpx;
  overflow-y: auto;
  padding: 40rpx;
}
.recordName {
  width: 60%;
  font-size: 34rpx;
  font-weight: 500;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.recordTitle {
  height: 60rpx;
  width: 100%;
  font-size: 34rpx;
  font-weight: 500;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.recordTag {
  height: 40rpx;
    border: 2px solid #A9BE7B;
    font-size: 27rpx;
    border-radius: 26rpx;
    padding: 6rpx 10rpx;
    line-height: 40rpx;
    color: #A9BE7B;
    font-weight: 400;
}
.taskItem {
  /* height: 160rpx; */
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.itemName {
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.itemSlider {
  width: 70%;
  margin: 20rpx 40rpx;
}
.custom-button {
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #A9BE7B;
  border-radius: 40rpx;
  background-color: #C0D695;
  padding: 0 10rpx;
}
.clickAdd {
  width: 100%;
  height: 40rpx;
  margin: 24rpx 0;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}
.addIcon {
  width: 40rpx;
  height: 40rpx;
}
.addIcon:click {
  background-color: #ccc;
}
.opacity {
  opacity: 0.1;
}
.btn {
  /* margin-top: 80rpx; */
  height: 70rpx;
  line-height: 70rpx;
  width: 100%;
  padding: 40rpx 0;
  background: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
  /* position: fixed; */
  /* bottom: 50rpx; */
  /* z-index: 99; */
}
.cancleTask {
  width: 35%;
  text-align: center;
  border: 1px solid #eee;
  border-radius: 20rpx;
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.0400);
  border: 1px solid #756C4B;
  color: #756C4B;
}
.confirmTask {
  width: 35%;
  text-align: center;
  border: 1px solid #eee;
  border-radius: 20rpx;
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.0400);
  border: 1px solid #779649;
  color: #779649;
}